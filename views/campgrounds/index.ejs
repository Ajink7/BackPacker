
<% layout('/layouts/boilerplate') %> 

<div id="map" style="width: 100%; height: 400px;">

</div>
<div class="container">
    <h1>All Camps</h1>
    <a href="/campgrounds/new">Add Campground</a>
    <ul>
        <% for( let camp of campgrounds) { %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if (camp.images[0]) { %>
                            <img src="<%= camp.images[0].url %> " class = 'img-fluid' alt="">
    
                        <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= camp.title %> 
                            </h5>
                            <p class="card-text"><%= camp.description %> </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= camp.location %>
                                </small> 
                            </p>
                            <a class="btn btn-primary" href='/campgrounds/<%= camp.id %>'>View</a>
    
                        </div>
                    </div>
                </div>
            </div>
        <% } %>  
    </ul>
</div>

<script>
    const mapToken = '<%= process.env.MAPBOX_TOKEN %>'
    let camps = {features: <%- JSON.stringify(campgrounds) %> }
