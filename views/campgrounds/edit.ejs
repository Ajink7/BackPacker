<% layout('/layouts/boilerplate') %> 




<div class="row">

    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class='mb-3'>
                <label class="form-label" for="title">Title</label>
                <input value= '<%= campground.title %>' class="form-control" type="text" id="title" name="campground[title]"  required >
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>
            <div class='mb-3'>
                <label class="form-label" for="location">Location</label>
                <input class="form-control" value="<%= campground.location %>" type="text" id="location" name="campground[location]" required >
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div> 
            <!-- <div class='mb-3 custom-file'>
                <label class="form-label custom-file-label" for="image">Add Images</label>
                <input type="file" name="image" id="image" multiple>
                
            </div>   -->
           
            <div class="mb-3">
                <label class="form-label" for="price">Price </label>
                <div class="input-group mb-3">
                    <span class="input-group-text">$</span>
                    <input type="text" id="price"  required class="form-control" value="<%= campground.price %>" placeholder="0.00" aria-label="Amount (to the nearest dollar)" name="campground[price]">
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                </div>
                  
            </div>
            <div class='mb-3'>
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description"  required  name="campground[description]"><%= campground.description %></textarea>
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div> 
            <div class="mb-3 input-group custom-file">
                <input type="file" name="image" class="form-control" id="image"  aria-label="Upload" multiple>
            </div>
            <div class="mb-3">
                <% campground.images.forEach(function (img,i) { %>
                    <img src="<%= img.thumbnail %> " class="img-thumbnail" alt="">
                    <div class="form-check">
                        <label for="image- <%= i %> ">Delete?</label>    
                        <input type="checkbox" id="image- <%= i %> " name="deleteImages[]" value="<%= img.filename %>">
                        
                    </div>
                   
                <% } )%>  
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Edit Campground</button>
            </div> 
            <a href="/campgrounds/<%= campground._id %>">Back to Campgrounds</a>
        </form>
    </div>
        
        


</div>



